<%- include("partials/header") %>

<div class=" container">
	<div class="row mt-4">
		<div class="col-6 show_image-container">
			<img src="<%= comic.image %>">
		</div>
		<div class="col-6 show_details-container">
			<h1><%= comic.title %></h1>
			<p><%= comic.description %></p>
			
			<table class="table">
			  <tbody>
				<tr>
				  <th scope="row">Author</th>
				  <td><%= comic.author %></td>
				</tr>
				<tr>
				  <th scope="row">Publisher</th>
				  <td><%= comic.publisher %></td>
				</tr>
				<tr>
				  <th scope="row">Date</th>
				  <td><%= comic.date %></td>
				</tr>
				<tr>
				  <th scope="row">Series</th>
				  <td><%= comic.series %></td>
				</tr>
				<tr>
				  <th scope="row">Issue</th>
				  <td><%= comic.issue %></td>
				</tr>
				<tr>
				  <th scope="row">Date</th>
				  <td><%= comic.date %></td>
				</tr>
				<tr>
				  <th scope="row">Genre</th>
				  <td><%= comic.genre %></td>
				</tr>
				 <tr>
				  <th scope="row">Color</th>
				  <td><%= comic.color %></td>
				</tr>
			  </tbody>
			</table>
			
			<a href="/comics/<%= comic._id%>/edit">
				<button class="btn  btn-outline-info btn-primary btn-lg btn-block mb-2" style="width:64vh">Edit</button>
			</a>
			<form action="/comics/<%= comic._id%>?_method=DELETE" method ="POST">
				<button type="submit" class="btn btn-outline-danger btn-lg btn-block mb-2" style="width:64vh">Delete</button>
			</form>
		</div>
	</div>
	
	<div class="row show_comment-header mt-3">
		Header
	</div>
	<% comments.forEach((comment) =>{ %>
		<div class="row show_comment-container py-2">
			<div class="col-3">
				<%= comment.user%>
			</div>
			<div class="col-9">
				<%= comment.text%>
			</div>
	   </div>
	<% }) %>
	
</div>


<%- include("partials/footer") %>